<%- include('../../common/includes/head.ejs',{pageTitle:"All Products"}) %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/products.css" />

<body>
  <%- include('../../common/includes/header.ejs') %>
  <main>
    <h1>Product Administration</h1>
    <section>
      <h2>Manage Products</h2>
      <p id="admin-new-product">
        <a href="/admin/products/new" class="btn">Add Product</a>
      </p>
    </section>
    <section>
      <ul id="products-grid">
        <% for (const product of products) { %>
        <li><%- include('includes/product-item', { product: product }) %></li>
        <% } %>
      </ul>
    </section>
  </main>
</body>
